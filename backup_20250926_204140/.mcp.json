{
  "agents": {
    "code-fixer": {
      "command": "claude-agent",
      "args": ["--agent", "code-fixer"],
      "configPath": "~/.claude/agents/code-fixer-agent.json",
      "description": "Fixes ALL code issues without stopping"
    },
    "story-worker": {
      "command": "claude-agent",
      "args": ["--agent", "story-worker"],
      "configPath": "~/.claude/agents/story-worker-agent.json",
      "description": "Implements complete user stories with TDD"
    },
    "solid-reviewer": {
      "command": "claude-agent",
      "args": ["--agent", "solid-reviewer"],
      "configPath": "~/.claude/agents/solid-reviewer-agent.json",
      "description": "Enforces SOLID principles and clean code"
    },
    "domain-analyzer": {
      "command": "claude-agent",
      "args": ["--agent", "domain-analyzer"],
      "configPath": "~/.claude/agents/domain-analyzer-agent.json",
      "description": "Analyzes codebase to create DDD models and ubiquitous language"
    },
    "architecture-refactor": {
      "command": "claude-agent",
      "args": ["--agent", "architecture-refactor"],
      "configPath": "~/.claude/agents/architecture-refactor-agent.json",
      "description": "Refactors to DDD architecture with SOLID principles"
    },
    "bdd-orchestrator": {
      "command": "claude-agent",
      "args": ["--agent", "bdd-orchestrator"],
      "configPath": "~/.claude/agents/bdd-orchestrator-agent.json",
      "description": "Orchestrates complete DDD transformation with BDD"
    },
    "production-orchestrator": {
      "command": "claude-agent",
      "args": ["--agent", "production-orchestrator"],
      "configPath": "~/.claude/agents/production-orchestrator-agent.json",
      "description": "Complete production pipeline with all quality gates for agile"
    },
    "story-workflow": {
      "command": "claude-agent",
      "args": ["--agent", "story-workflow"],
      "configPath": "~/.claude/agents/story-workflow-agent.json",
      "description": "Manages complete story workflow from ticket to PR"
    },
    "pr-review": {
      "command": "claude-agent",
      "args": ["--agent", "pr-review"],
      "configPath": "~/.claude/agents/pr-review-agent.json",
      "description": "Monitors and addresses PR review comments automatically"
    }
  },
  "subagents": {
    "code-fixer": {
      "type": "general-purpose",
      "configFile": "agents/code-fixer-agent.json"
    },
    "story-worker": {
      "type": "general-purpose",
      "configFile": "agents/story-worker-agent.json"
    },
    "solid-reviewer": {
      "type": "general-purpose",
      "configFile": "agents/solid-reviewer-agent.json"
    },
    "domain-analyzer": {
      "type": "general-purpose",
      "configFile": "agents/domain-analyzer-agent.json"
    },
    "architecture-refactor": {
      "type": "general-purpose",
      "configFile": "agents/architecture-refactor-agent.json"
    },
    "bdd-orchestrator": {
      "type": "general-purpose",
      "configFile": "agents/bdd-orchestrator-agent.json"
    },
    "production-orchestrator": {
      "type": "general-purpose",
      "configFile": "agents/production-orchestrator-agent.json"
    },
    "story-workflow": {
      "type": "general-purpose",
      "configFile": "agents/story-workflow-agent.json"
    },
    "pr-review": {
      "type": "general-purpose",
      "configFile": "agents/pr-review-agent.json"
    }
  }
}